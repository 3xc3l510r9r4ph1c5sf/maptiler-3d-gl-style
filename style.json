{
    "version": 8,
    "name": "building-demo",
    "sources": {
        "mapbox": {
            "tiles": ["http://localhost:18080/data/osm2vectortiles/{z}/{x}/{y}.pbf"],
            "type": "vector"
        }
    },
    "layers": [
        {
            "id": "building",
            "type": "fill",
            "source": "mapbox",
            "source-layer": "building",
            "paint": {
              "fill-color": "grey",
              "fill-extrude-height": {
                "property": "render_height",
                "type": "identity"
              },
              "fill-extrude-base": {
                "property": "render_min_height",
                "type": "identity"
              }
            }
        }
    ]
}
