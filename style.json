{
    "version": 8,
    "name": "building-demo",
    "sources": {
        "openmaptiles": {
            "tiles": ["http://localhost:18080/data/osm2vectortiles/{z}/{x}/{y}.pbf"],
            "type": "vector"
        }
    },
    "layers": [
        {
            "id": "building",
            "type": "fill-extrusion",
            "source": "openmaptiles",
            "source-layer": "building",
            "paint": {
              "fill-extrusion-color": "grey",
              "fill-extrusion-height": {
                "property": "render_height",
                "type": "identity"
              },
              "fill-extrusion-base": {
                "property": "render_min_height",
                "type": "identity"
              }
            }
        }
    ]
}
